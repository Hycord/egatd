generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Item {
  id        String   @id
  createdAt DateTime @default(now())
  count     Int      @default(0)
  userId    String

  @@index([userId])
}

model User {
  id        String   @id @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  money     Int      @default(0)

  @@index([id], map: "id")
}
