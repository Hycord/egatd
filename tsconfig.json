{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "rootDir": "src",
        "baseUrl": ".",
        "resolveJsonModule": true
    },
    "ts-node": {
        // Do not forget to `npm i -D tsconfig-paths`
        "require": [
            "tsconfig-paths/register"
        ]
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "./src/**/*"
    ]
}